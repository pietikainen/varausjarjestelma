<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="varausjarjestelma.Customer"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Customer">
    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <Grid Margin="20" Padding="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>

                    <!--  Customer form starts  -->
                    <!--  Column 0 and 1  -->
                    <Label
                        x:Name="customerIdLabel"
                        IsVisible="False"
                        Text="Customer Id:"
                        VerticalOptions="Center" />
                    <Entry
                        x:Name="customerIdEntry"
                        Grid.Column="1"
                        BackgroundColor="#DBDBDB"
                        IsReadOnly="True"
                        IsVisible="False" />
                    <Label
                        Grid.Row="1"
                        Text="First name:"
                        VerticalOptions="Center" />
                    <Entry
                        x:Name="firstNameEntry"
                        Grid.Row="1"
                        Grid.Column="1" />
                    <Label
                        Grid.Row="2"
                        Text="Last name:"
                        VerticalOptions="Center" />
                    <Entry
                        x:Name="lastNameEntry"
                        Grid.Row="2"
                        Grid.Column="1" />
                    <Label
                        Grid.Row="3"
                        Text="Address:"
                        VerticalOptions="Center" />
                    <Entry
                        x:Name="addressEntry"
                        Grid.Row="3"
                        Grid.Column="1" />
                    <Label
                        Grid.Row="4"
                        Text="Postal Code:"
                        VerticalOptions="Center" />
                    <Entry
                        x:Name="postalCodeEntry"
                        Grid.Row="4"
                        Grid.Column="1" />
                    <Label
                        Grid.Row="5"
                        Text="City:"
                        VerticalOptions="Center" />
                    <Entry
                        x:Name="cityEntry"
                        Grid.Row="5"
                        Grid.Column="1" />
                    <Label
                        Grid.Row="6"
                        Text="Phone number:"
                        VerticalOptions="Center" />
                    <Entry
                        x:Name="phoneNumberEntry"
                        Grid.Row="6"
                        Grid.Column="1" />
                    <Label
                        Grid.Row="7"
                        Text="Email:"
                        VerticalOptions="Center" />
                    <Entry
                        x:Name="emailEntry"
                        Grid.Row="7"
                        Grid.Column="1" />

                    <!--  Column 2  -->
                    <Button
                        x:Name="CustomerSubmitButton"
                        Grid.Row="3"
                        Grid.Column="2"
                        Clicked="CustomerSubmitButtonClicked"
                        Text="Save" />

                    <Button
                        x:Name="CustomerModifyButton"
                        Grid.Row="3"
                        Grid.Column="2"
                        Clicked="CustomerModifyButton_Clicked"
                        IsVisible="false"
                        Text="Update" />
                </Grid>



            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="150" />



                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label Text="ID" />
                    <Label Grid.Column="1" Text="Name" />
                    <Label Grid.Column="2" Text="Address" />
                    <Label Grid.Column="3" Text="Postal Code" />
                    <Label Grid.Column="4" Text="City" />
                    <Label Grid.Column="5" Text="Phone number" />
                    <Label Grid.Column="6" Text="Email" />
                </Grid>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Frame>
                    <ListView
                        x:Name="CustomerListView"
                        BackgroundColor="AliceBlue"
                        ItemTapped="CustomerListViewItemTapped">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="200" />
                                            <ColumnDefinition Width="200" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="150" />

                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Text="{Binding CustomerId}" />
                                        <Label Grid.Column="1" Text="{Binding FullName}" />
                                        <Label Grid.Column="2" Text="{Binding Address}" />
                                        <Label Grid.Column="3" Text="{Binding PostalCode}" />
                                        <Label Grid.Column="4" Text="{Binding City}" />
                                        <Label Grid.Column="5" Text="{Binding Phone}" />
                                        <Label Grid.Column="6" Text="{Binding Email}" />
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Frame>
