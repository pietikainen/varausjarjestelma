<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="varausjarjestelma.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    HeightRequest="800"
    WidthRequest="500">
    <ContentPage.Resources>

        <ResourceDictionary>
            <Style x:Key="DarkBrownButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="DarkGoldenrod" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="Margin" Value="5" />
                <!--  Varjostuksen määrittely  -->
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="Button.Shadow">
                                        <Setter.Value>
                                            <Shadow
                                                Brush="Black"
                                                Opacity="0.8"
                                                Radius="5"
                                                Offset="4,4" />
                                        </Setter.Value>
                                    </Setter>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>

            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>


    <Grid>
        <Image Aspect="Fill" Source="mokkitausta.png" />
        <ScrollView>
            <VerticalStackLayout Padding="30,0" Spacing="25">
                <Image
                    Aspect="AspectFit"
                    HeightRequest="185"
                    SemanticProperties.Description="dot net bot in a race car number eight"
                    Source="mokkilogo.png" />

                <!--  nappijoka suorittaa navigoinnin  -->

                <Button
                    Clicked="NavigateToAreaManagementButtonClicked"
                    Style="{StaticResource DarkBrownButtonStyle}"
                    Text="Manage"
                    WidthRequest="300" />
                <Button
                    Clicked="NavigateToBookingButtonClicked"
                    Style="{StaticResource DarkBrownButtonStyle}"
                    Text="Booking"
                    WidthRequest="300" />
                <Button
                    Clicked="NavigateToInvoiceButtonClicked"
                    Style="{StaticResource DarkBrownButtonStyle}"
                    Text="Invoice"
                    WidthRequest="300" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
