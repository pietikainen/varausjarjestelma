<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="varausjarjestelma.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a race car number eight"
                Source="dotnet_bot.png" />

            <Label
                x:Name="MySqlTestLabel"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="Hello, World!"
                VerticalOptions="Center" />

            <Button
                x:Name="MySqlTestBtn"
                Clicked="OnDatabaseTestButtonClicked"
                HorizontalOptions="Center"
                Text="Click to test MySQL Database!"
                VerticalOptions="Center" />

            <Button
                x:Name="MySqlReadBtn"
                Clicked="OnDatabaseReadButtonClicked"
                HorizontalOptions="Center"
                Text="Click to read MySQL data from table 'alue'"
                VerticalOptions="Center" />
            
                <!-- nappijoka suorittaa navigoinnin -->
            <Button Text="Siirry Management-sivulle" Clicked="NavigateToManagementButtonClicked" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
